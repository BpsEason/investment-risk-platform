# .env.example
# This file contains example environment variables.
# Copy this to .env and fill in your actual values.

# OpenAI API Key for AI code generation
OPENAI_API_KEY=your_openai_api_key_here

# Django Settings
SECRET_KEY=django-insecure-some-secret-key-for-dev-only # Change this in production!
DEBUG=True # Set to False in production
ALLOWED_HOSTS=127.0.0.1,localhost,your_domain.com

# PostgreSQL Database
POSTGRES_DB=risk_platform_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=db # Service name in docker-compose
POSTGRES_PORT=5432

# RabbitMQ Broker for Celery
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Redis for Celery Result Backend
REDIS_URL=redis://redis:6379/0
